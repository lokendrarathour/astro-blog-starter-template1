// FILE: src/layouts/BaseLayout.astro
---
const { title = "Niyera" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500&family=Inter:wght@300;400;500&display=swap');
    :root {
      --bg: #f6f4f1; /* warm off-white like Canva */
      --surface: #ffffff;
      --text: #1f2937;
      --muted: #6b7280;
      --accent: #7a6f63; /* soft earthy accent */
      --border: #e7e2dc;
      --max: 920px;
    }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: 'Inter', ui-sans-serif, system-ui;
      background: var(--bg);
      color: var(--text);
      line-height: 1.7;
    }
    main { max-width: var(--max); margin: auto; padding: 4rem 1.5rem; }
    section { margin: 4rem 0; }
    h1, h2 {
      font-family: 'Playfair Display', serif;
      font-weight: 500;
      letter-spacing: -0.015em;
    }
    h1 { font-size: clamp(2.2rem, 5vw, 3rem); }
    h2 { font-size: 1.5rem; margin-bottom: 1rem; }
    p { color: var(--muted); max-width: 680px; }
    a { color: var(--accent); text-decoration: none; border-bottom: 1px solid currentColor; }
    footer { text-align: center; padding: 3rem 1rem; color: var(--muted); font-size: 0.9rem; }
    .hero { min-height: 70vh; display: flex; flex-direction: column; justify-content: center; }
    .tagline { margin-top: 1rem; font-size: 1.1rem; }
    .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 2rem; }
    .card {
      padding: 1.75rem;
      background: var(--surface);
      border-radius: 16px;
      border: 1px solid var(--border);
    }
  </style>
</head>
<body>
  <main>
    <slot />
  </main>
  <footer>
    © 2026 Niyera · An individual practice
  </footer>
</body>
</html>

